@model IEnumerable<OffCanvasModel>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasWithBackdrop" aria-labelledby="offcanvasWithBackdropLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWithBackdropLabel">InfoStore</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <hr class="hr-text" data-content="Menu" />
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Home</a>
            </li>
        </ul>
        <ul class="navbar-nav flex-grow-1">
            <hr class="hr-text" data-content="Information" />
            @foreach (var item in this.Model)
            {
                <li class="nav-item"><a class="nav-link text-dark" href="@item.Link">@item.Title</a></li>
            }
        </ul>
        <hr class="hr-text" data-content="Membership" />
        <partial name="_LoginPartial" />
        <hr class="hr-text" data-content="Settings" />
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Settings</a>
            </li>
        </ul>
    </div>
</div>

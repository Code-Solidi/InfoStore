@model BookmarkIndexModel

@*<form asp-action="Index" class="mt-3 mb-5">*@
<div class="mt-3 mb-5">
    <div class="form-group row mb-3">
        <div class="col-11">
            <input id="search-input" asp-for="Filter.Search" class="form-control" placeholder="Search in Title or URL" />
        </div>
        <div class="col-1">
            <div class="d-grid">
                <button id="search-button" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-form-label col-3">Display bookmarks in group:</label>
        <div class="dropdown col-3">
            <div class="truncate dropdown-toggle btn btn-secondary float-start" type="button" id="selectedGroup" data-bs-toggle="dropdown" aria-expanded="false">
                @(string.IsNullOrWhiteSpace(this.Model.Filter?.Group) ? "All" : this.Model.Filter.Group)
            </div>
            <ul class="dropdown-menu" id="filter-select-group" aria-labelledby="selectedGroup">
                @{
                    var groups = this.Model?.GetGroups() ?? Array.Empty<BookmarkIndexModel.GroupSelect>();
                    foreach (var group in groups)
                    {
                        <li><a class="dropdown-item" href="#" data-group-id="@group.Id">@group.Name</a></li>
                    }

                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">All</a></li>
                }
            </ul>
        </div>
        <div class="col-1 offset-5">
            <div class="d-grid">
                <button id="clear-search-button" class="btn btn-secondary">Clear</button>
            </div>
        </div>

    </div>
</div>


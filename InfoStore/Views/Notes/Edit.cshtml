@model InfoStore.Models.NoteModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Note</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Title" class="col-form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group row mb-3">
        <div class="col-12">
            <label asp-for="Content" class="col-form-label mb-1"></label>
            <textarea asp-for="Content" id="id-note-editor" rows="6" class="form-control"></textarea>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-controller="Notes" asp-action="Index" class="btn btn-secondary">Go&nbsp;Back</a>
            </div>
        </div>
    </div>
</form>

@section Styles {
    <link rel="stylesheet" href="~/lib/easymde/dist/easymde.min.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/easymde/dist/easymde.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const easyMDE = new EasyMDE({ element: $('#id-note-editor')[0] });
    </script>
}
